<Window x:Class="binary_game.Leaderboards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:binary_game"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Leaderboards" Height="500" Width="350">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="file:///C:/Users/22-0042c/source/repos/binary-game/binary game/LeaderboardScreen.PNG" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
        </Grid.Background>
        <ListView Name="ListViewLeaderboard" Margin="68,78,68,85" Background="{x:Null}" BorderBrush="{x:Null}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="70" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Score" Width="70" DisplayMemberBinding="{Binding Score}"/>
                    <GridViewColumn Header="Time"  Width="70" DisplayMemberBinding="{Binding Time}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
